@model IEnumerable<PhoneBook.Models.PhoneBookModel>

<div style="padding-top:10px">
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-info" })       @Html.ActionLink("Get All Record", "Index", null, new { @class = "btn btn-info" })
</div>

@using (Html.BeginForm("Index", "PhoneBook", FormMethod.Post))
{
    <div class="form-inline" style="padding-top:20px">
        <div class="form-group">
            <label class="control-label col-sm-2" for="name">Name</label>
            <div class="col-sm-8">
                @Html.TextBox("EntryName", null, new { @class = "form-control", id = "txtName" })
            </div>
            <div class="col-sm-2">
                <input type="submit" value="Search" class="btn btn-info" />
            </div>
        </div>
    </div>

    <table class="table table-striped table-bordered" style="margin-top:20px">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EntryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
        </tr>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.EntryName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                </tr>
            }
        }

    </table>
}
